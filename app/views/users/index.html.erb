     <div class="row my-5">
       <div class="col-sm-3"></div>
       <div class="col-sm-6">
          <% @users.each do |user| %>
          
          <div class="d-flex flex-column">
          <%= link_to user_path(user), class: "normal-color no-text-decoration" do %>
            <div class="row users-list">
              <div class="d-flex align-items-center col-3 avator-image">
                <%= image_tag avatar_url(user), class: "user-list-icon" %>
              </div>
              <div class="d-flex align-items-center col-6 user-info">
                <%= user.name %>
              </div>
              <div class="d-flex align-items-center col-3 follow">
                  <%= render "follow_form", {user: user} %>
              </div>
            </div>
          <% end %>
          </div>
          <% end %>
       </div>
     </div> 