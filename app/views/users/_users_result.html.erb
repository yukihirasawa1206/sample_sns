<% if search.present? %>

  <% search.each do |search_user| %>
  
    <%= link_to user_path(search_user), class: "no-text-decoration normal-color" do %>
      <div class="search-result-item p-2" id="users-result-<%= search_user.id %>">
        <%= image_tag avatar_url(search_user), class:"post-author-icon" %>
        <%= search_user.name %>
      </div>
    <% end %>
    
  <% end %>
  
<% else %>
  <div class="p-3">
    Match results not found.
  </div>
<% end %>