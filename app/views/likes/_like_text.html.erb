<% likes.each.with_index do |like, index| %>
  <% if likes.size == 1 %>
    <strong><%= like.user.name %></strong> likes this
  <% elsif like == likes.last %>
    and<strong><%= + like.user.name %></strong> like this
  <% elsif index > 1 %>
    <%= "and" + (likes.size-index) + "others" %> like this
    <% break %>
  <% elsif index == likes.size-2 || index == 1 %>
    <strong><%= like.user.name %></strong>
  <% else %>
    <strong><%= like.user.name + ", " %></strong>
  <% end %>
<% end %>